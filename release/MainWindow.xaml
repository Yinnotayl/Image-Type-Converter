<Window x:Class="ImageConverterDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Converter" Height="564" Width="900"
        AllowDrop="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="LeftColumn"/>
            <ColumnDefinition Width="0*"/>
            <!-- right column initially collapsed (width 0) -->
            <ColumnDefinition Width="0" x:Name="RightColumn"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Grid.Column="0" Margin="20,0,20,0" VerticalAlignment="Center" Height="512">
            <TextBlock FontSize="22" FontWeight="Bold" Margin="0,0,0,20">
                <Run Text="Image "/><Run Language="en-sg" Text="Type "/><Run Text="Converter"/>
            </TextBlock>

            <!-- Drag & Drop area -->
            <Border x:Name="DropArea" BorderBrush="DarkGray" BorderThickness="2"
                    CornerRadius="6" Height="240" AllowDrop="True"
                    Background="#FFF8F8F8" Padding="10"
                    Drop="DropArea_Drop" DragEnter="DropArea_DragEnter" DragLeave="DropArea_DragLeave">
                <Grid>
                    <TextBlock x:Name="DropHint" Text="Drop images here" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Foreground="Gray"/>
                    <Button x:Name="BtnSelect" Content="Select Images" Width="140" Height="34" HorizontalAlignment="Center" VerticalAlignment="Center" Click="BtnSelect_Click"/>
                    <TextBlock x:Name="FilesCount" Text="" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Foreground="Gray"/>
                </Grid>
            </Border>

            <!-- PRE-CONVERSION LIST (below drop area) -->
            <TextBlock Text="Files to convert" Margin="0,12,0,6" FontWeight="SemiBold"/>
            <Border BorderBrush="#FFDDDDDD" BorderThickness="1" CornerRadius="4" Padding="6" Background="White">
                <ScrollViewer Height="120" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="PreItemsList" ItemsSource="{Binding Items}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="56"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="140"/>
                                    </Grid.ColumnDefinitions>

                                    <Image Grid.Column="0" Width="48" Height="48" Source="{Binding Thumb}" Stretch="Uniform"/>

                                    <StackPanel Grid.Column="1" Margin="8,0">
                                        <TextBlock Text="{Binding FileName}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock FontSize="12" Foreground="Gray">
                                                <Run Text="Original: " />
                                                <Run Text="{Binding OriginalFormat}" />
                                            </TextBlock>

                                        </StackPanel>

                                    <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <ComboBox Width="120" SelectedItem="{Binding NewFormat, Mode=TwoWay}" 
                                      ItemsSource="{Binding DataContext.AvailableFormats, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <Button x:Name="BtnConvert" Content="Convert" Width="120" Height="36" Margin="0,18,0,0" HorizontalAlignment="Left" Click="BtnConvert_Click"/>
        </StackPanel>
        </ScrollViewer>

                <!-- RIGHT PANEL -->
        <Border Grid.Column="2" BorderBrush="#FFDDDDDD" BorderThickness="1" Background="WhiteSmoke">
            <DockPanel>
                <ScrollViewer VerticalScrollBarVisibility="Auto" DockPanel.Dock="Top">
                    <ItemsControl x:Name="ItemsList" Margin="8" ItemsSource="{Binding Items}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" Margin="6" BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="4" Background="White">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="64"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="160"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Grid.Column="0" Width="56" Height="56" Source="{Binding Thumb}" Stretch="Uniform"/>

                                        <StackPanel Grid.Column="1" Margin="8,0">
                                            <TextBlock Text="{Binding FileName}" FontWeight="SemiBold"/>
                                            <TextBlock FontSize="12" Foreground="Gray">
                                                <Run Text="Original: " />
                                                <Run Text="{Binding OriginalFormat}" />
                                            </TextBlock>

                                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                                <TextBlock Text="New format:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                                <TextBlock Text="{Binding NewFormat}" VerticalAlignment="Center" FontWeight="Bold"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                            <ProgressBar Width="150" Height="14" Value="{Binding Progress}" Maximum="100"/>
                                            <TextBlock Text="{Binding ProgressText}" FontSize="11" HorizontalAlignment="Right" Margin="0,6,0,0"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                                                <Button Content="Download" Width="80" Margin="4,0" IsEnabled="{Binding IsConverted}" Click="BtnDownload_Click"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Download all button at bottom (below list) -->
                <StackPanel Orientation="Horizontal" Height="48" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="8">
                    <Button x:Name="BtnDownloadAll" Content="Download All" Width="120" Height="32" Click="BtnDownloadAll_Click" Margin="0,8,8,8"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</Window>
